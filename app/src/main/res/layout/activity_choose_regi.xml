<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseRegi">
    <LinearLayout android:gravity="center_horizontal"
        android:id="@+id/linearThirdpage"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStyledeep_purple_800">
        <ImageView
            android:id="@+id/doctorRegPage"
            android:layout_width="@dimen/_210pxh"
            android:layout_height="@dimen/_190pxh"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/_80pxh"
            android:layout_marginEnd="@dimen/_70pxh"
            android:layout_marginTop="@dimen/_60pxv"
            android:scaleType="fitXY"
            android:src="@drawable/doctorchoose"
        tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/txtDoctor"
            style="@style/txtInterbold36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/_87pxh"
            android:layout_marginTop="@dimen/_1pxv"
            android:layout_marginEnd="@dimen/_80pxh"
            android:ellipsize="end"
            android:singleLine="true"

            android:text="@string/lbl_doctor"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/pateintRegpage"
            android:layout_width="@dimen/_210pxh"
            android:layout_height="@dimen/_185pxh"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/_80pxh"
            android:layout_marginEnd="@dimen/_70pxh"
            android:layout_marginTop="@dimen/_65pxv"
            android:scaleType="fitXY"
            android:src="@drawable/feverchoose"
            tools:ignore="ContentDescription" />

        <TextView android:ellipsize="end" android:id="@+id/txtPatient"
            android:layout_gravity="end"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20pxv"
            android:layout_marginEnd="@dimen/_130pxh"
            android:layout_marginStart="@dimen/_87pxh"
            android:layout_marginTop="@dimen/_9pxv"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:textColor="@color/white"

            style="@style/txtInterbold36" android:text="@string/lbl_patient"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>